<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.daidone.roshambo.Scores" table="scores">
	<id name="scoresID" column="scoresid" type="int">
		<generator class="increment"></generator>
	</id>
	<property name="accountID" column="accountid" type="int"></property>
	<property name="opponent" column="opponent" type="string"></property>
	<property name="wins" column="wins" type="int"></property>
	<property name="loses" column="loses" type="int"></property>
	<property name="ties" column="ties" type="int"></property>
	
</class>
</hibernate-mapping>